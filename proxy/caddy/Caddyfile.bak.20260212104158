# RIMS / RADREPORT
# ============================================================

rims.alshifalab.pk {
	encode gzip zstd
	import sec_headers

	@backend_paths {
		path /api/* /admin/* /media/* /static/*
	}

	handle @backend_paths {
		reverse_proxy 127.0.0.1:8015 {
			import proxy_headers
		}
	}

	handle {
		reverse_proxy 127.0.0.1:8081 {
			import proxy_headers
		}
	}
}

api.rims.alshifalab.pk {
	encode gzip zstd

	reverse_proxy 127.0.0.1:8015 {
		import proxy_headers
	}
}

