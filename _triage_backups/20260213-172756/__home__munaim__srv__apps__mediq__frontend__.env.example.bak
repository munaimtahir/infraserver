# ============================================
# Frontend Service - Environment Variables
# ============================================
# Copy this file to .env.local in the frontend directory
# Next.js automatically loads .env.local files
# 
# Note: Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser

# ============================================
# API Configuration
# ============================================
# Base URL for the backend API
# This will be accessible in the browser, so use the public URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/v1

# Alternative: If using the old variable name (for backward compatibility)
# NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Application Metadata
# ============================================
# Application name displayed in UI
NEXT_PUBLIC_APP_NAME=Exam Prep Platform

# Environment identifier
NEXT_PUBLIC_ENV=development

# ============================================
# Feature Flags
# ============================================
# Enable student concept explorer feature
NEXT_PUBLIC_FEATURE_STUDENT_CONCEPT_EXPLORER=false

# ============================================
# Notes
# ============================================
# - Next.js requires NEXT_PUBLIC_ prefix for client-side variables
# - Variables without NEXT_PUBLIC_ are only available server-side
# - For production, use your production API URL
# - The /v1 path assumes your API is versioned; adjust if needed
# - Next.js will replace these at build time, so restart dev server after changes
