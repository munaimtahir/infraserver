# FMU SIMS - Environment Variables Example
# Copy this file to .env and configure with your actual values
# NEVER commit .env to version control

# =============================================================================
# Django Core Settings
# =============================================================================

# SECURITY WARNING: Generate a strong secret key for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-generated-secret-key-here-at-least-50-characters-long

# Set to False in production! Debug mode exposes sensitive information
DJANGO_DEBUG=False

# Comma-separated list of allowed hostnames/domains
# For production: pgsims.alshifalab.pk
# For development: localhost,127.0.0.1
DJANGO_ALLOWED_HOSTS=pgsims.alshifalab.pk,localhost,127.0.0.1

# Comma-separated list of trusted origins for CSRF protection
# Must include HTTPS URLs in production
# For production: https://pgsims.alshifalab.pk
# For development: http://localhost,http://127.0.0.1
CSRF_TRUSTED_ORIGINS=https://pgsims.alshifalab.pk,http://localhost,http://127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================

DB_ENGINE=django.db.backends.postgresql
DB_NAME=sims_db
DB_USER=sims_user
DB_PASSWORD=your-secure-database-password-here
DB_HOST=db
DB_PORT=5432

# For Docker Compose: PostgreSQL container environment
# Must match DB_PASSWORD above for docker-compose to work correctly
POSTGRES_DB=sims_db
POSTGRES_USER=sims_user
POSTGRES_PASSWORD=your-secure-database-password-here

# =============================================================================
# Redis Configuration (for RQ background jobs - OPTIONAL)
# =============================================================================

# Redis is optional - system will work without it but background jobs will be disabled
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# CORS Configuration
# =============================================================================

# Comma-separated list of allowed CORS origins
# Use HTTPS URLs in production
# For production: https://pgsims.alshifalab.pk
# For development: http://localhost:5173,http://localhost:3000
CORS_ALLOWED_ORIGINS=https://pgsims.alshifalab.pk,http://localhost:5173,http://localhost:3000

# =============================================================================
# Email Configuration
# =============================================================================

# Email backend: 'django.core.mail.backends.console.EmailBackend' for development
# For production, use SMTP: 'django.core.mail.backends.smtp.EmailBackend'
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password-or-app-password
DEFAULT_FROM_EMAIL=noreply@sims.edu

# =============================================================================
# JWT Token Configuration
# =============================================================================

# Access token lifetime in minutes (default: 60 minutes)
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in minutes (default: 1440 minutes = 24 hours)
JWT_REFRESH_TOKEN_LIFETIME=1440

# =============================================================================
# Media Files
# =============================================================================

# Media root path (optional, defaults to backend/media)
# MEDIA_ROOT=/path/to/media

# =============================================================================
# Frontend Configuration (for frontend container)
# =============================================================================

# Backend API URL for frontend
# In production behind Caddy: /api (relative path)
# In development: http://localhost:8000
VITE_API_BASE_URL=/api

# =============================================================================
# Production Notes
# =============================================================================

# Before deploying to production:
# 1. Generate a new DJANGO_SECRET_KEY (never reuse across environments)
# 2. Set DJANGO_DEBUG=False
# 3. Update DJANGO_ALLOWED_HOSTS with your production domain
# 4. Update CSRF_TRUSTED_ORIGINS with HTTPS URLs
# 5. Update CORS_ALLOWED_ORIGINS with HTTPS URLs
# 6. Set strong database passwords
# 7. Configure email backend for production (SMTP)
# 8. Review all security settings in settings.py
