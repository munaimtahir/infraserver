# Environment Variables Template for New App
# Copy this file to your app directory as .env.example
# Replace APP_NAME with your app name (e.g., app2, app3)

# App Configuration
APP_NAME=APP_NAME
APP_PATH=/APP_NAME

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=APP_NAME_backend

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_HOST=APP_NAME_frontend

# Database Configuration (shared database)
DB_HOST=db
DB_PORT=5432
DB_NAME=consult_db
DB_USER=consult_user
DB_PASSWORD=consult_password

# Redis Configuration (shared redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Django/Backend Settings
DEBUG=0
SECRET_KEY=change_me_in_prod
ALLOWED_HOSTS=localhost,127.0.0.1,APP_NAME_backend,172.104.53.127

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://172.104.53.127,http://localhost:3000,http://localhost
CSRF_TRUSTED_ORIGINS=http://172.104.53.127,http://localhost:3000,http://localhost

# API Configuration
API_URL=http://172.104.53.127/APP_NAME/api
WS_URL=ws://172.104.53.127/APP_NAME/ws

# Resource Limits (for docker-compose.yml)
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=1G
FRONTEND_CPU_LIMIT=1.0
FRONTEND_MEMORY_LIMIT=512M

# Rate Limiting (for nginx)
API_RATE_LIMIT=100r/m
WS_RATE_LIMIT=10r/m

