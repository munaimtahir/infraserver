#
# DEBUG can be set to 'true' or 'false'.
# https://docs.djangoproject.com/en/4.0/ref/settings/#debug
#
DJANGO_DEBUG=true

#
# Database
#
# The following variables are used by docker-compose to configure the PostgreSQL container.
# They are also used by Django to connect to the database.
#
DB_ENGINE=django.db.backends.postgresql
DB_NAME=rims
DB_USER=rims
DB_PASSWORD=rims
DB_HOST=db
DB_PORT=5432

#
# Redis
#
# The following variables are used by Django to connect to Redis.
#
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

#
# Email
#
# The following variables are used by Django to send emails.
# For local development, we can use the console backend.
#
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

